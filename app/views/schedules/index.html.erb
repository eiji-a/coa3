<h1>Listing schedules</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Start date</th>
    <th>Start time</th>
    <th>End date</th>
    <th>End time</th>
    <th>Place</th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%= link_to schedule.subject, schedule.content %></td>
    <td><%=h schedule.start_date %></td>
    <td><%=h schedule.start_time %></td>
    <td><%=h schedule.end_date %></td>
    <td><%=h schedule.end_time %></td>
    <td><%=h schedule.place %></td>
    <td><%= link_to 'Show', schedule %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Destroy', schedule, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

