<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <table>
    <tr>
      <th width="80px">パスワード</th>
      <td><%= text_field_tag 'new_password', :size => 10 %></td>
    </tr>
    <tr>
      <th>パスワード(確認)</th>
      <td><%= text_field_tag 'confirm', :size => 10 %></td>
    </tr>
  </table>

  <%= f.submit '変更' %>
<% end %>
