<p>
  <% if @content.mimetype =~ /^text/ %>
    <pre>
<%=h @content.body %>
    </pre>
  <% elsif @content.mimetype =~ /^image/ %>
    <a href="/contents/output/<%=h @content.id %>" target="subwin">
      <img src="/contents/output/<%=h @content.id %>" height="400px">
    </a>
  <% else %>
    <object data="/contents/output/<%=h @content.id %>"
	    width="600px" height="300px" border="0">
      @content.title
    </object>
  <% end %>
</p>
