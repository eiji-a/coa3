<% wdays = ['日', '月', '火', '水', '木', '金', '土'] %>
<% col = case day.wday
         when 0 then 'holiday'
         when 6 then 'saturday'
         else 'weekday'
         end
   col = 'holiday' if day.holiday.size > 0 %>

<td>
  <span class="<%= col %>">
    <%= link_to day.day, :action => 'day', :id => day.to_s %>
  </span>
</td>
<td><span class="<%= col %>"><%= wdays[day.wday] %></span></td>
<td>
  <table border="0" cellpadding="0" cellspacing="0">
  <% day.holiday.each do |h| %>
    <tr>
      <td width="30px"></td>
      <td><span class="<%= col %>"><%= h.subject %></span></td>
    </tr>
  <% end %>
  <% day.schedule.each do |s| %>
    <tr>
      <td><%= s.start_time %></td>
      <td><%= s.subject %></td>
    </tr>
  <% end %>
  </table>
</td>
